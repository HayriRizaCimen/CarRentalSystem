@model IEnumerable<CarRental.Entity.Concretes.Employee>

@{ ViewBag.Title = "All Employees"; }

<h2>@ViewBag.Title</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.Encode("Employee Name")
        </th>
        <th>
            @Html.Encode("Employee Surname")
        </th>
        <th>
            @Html.Encode("Email")
        </th>
        <th>
            @Html.Encode("CompanyID")
        </th>
        <th></th>
    </tr>


    @foreach (var item in Model)
    {
<tr>
    <td>
        @Html.DisplayFor(modelItem => item.EmployeeName)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.EmployeeSurname)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.Email)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.CompanyID)
    </td>
    <td>
        @Html.ActionLink("Detail", "Details", new { id = item.EmployeeID }) |
        @Html.ActionLink("Edit", "Edit", new { id = item.EmployeeID }) |
        @Html.ActionLink("Delete", "Delete", new { id = item.EmployeeID })
    </td>
</tr>}

</table>
