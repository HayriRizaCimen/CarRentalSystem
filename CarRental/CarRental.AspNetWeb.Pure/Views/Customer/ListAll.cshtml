@model IEnumerable<CarRental.Entity.Concretes.Customer>

@{ ViewBag.Title = "All Customers"; }

<h2>@ViewBag.Title</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.Encode("Customer Name")
        </th>
        <th>
            @Html.Encode("Customer Surname")
        </th>
        <th>
            @Html.Encode("Phone Nummber")
        </th>
        <th>
            @Html.Encode("Email")
        </th>
        <th></th>
    </tr>


    @foreach (var item in Model)
    {
<tr>
    <td>
        @Html.DisplayFor(modelItem => item.CustomerName)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.CustomerSurname)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.PhoneNumber)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.Email)
    </td>
    <td>
        @Html.ActionLink("Detail", "Details", new { id = item.CustomerID }) |
        @Html.ActionLink("Edit", "Edit", new { id = item.CustomerID }) |
        @Html.ActionLink("Delete", "Delete", new { id = item.CustomerID })
    </td>
</tr>}

</table>
